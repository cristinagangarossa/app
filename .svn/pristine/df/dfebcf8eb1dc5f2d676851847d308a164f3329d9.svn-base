<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewDevice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/q8_smartband" />

    <TextView
        android:id="@+id/textViewNameDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Q8 Smartband"
        android:textSize="14sp"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/textViewPowerDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batteria: 55%"
        android:textSize="14sp"
        android:padding="15dp"/>

    <ImageView
        android:id="@+id/imageViewArrowNext"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/icon_arrow_next_dark" />
</LinearLayout>