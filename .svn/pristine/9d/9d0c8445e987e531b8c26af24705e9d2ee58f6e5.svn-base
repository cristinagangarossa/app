    private List<WeekData> getWeeks() {
        //TODO get from storage
        List<WeekData> weeks = new ArrayList<WeekData>();
        WeekData current = new WeekData("Questa Settimana", "600 Media");
        List<GenericDayData> days1 = new ArrayList<GenericDayData>();
        BreathDayData day1 = new BreathDayData();
        Date date1 = new Date();
        day1.setDate(date1);
        day1.setData("25");
        day1.setMax("30");
        day1.setMin("20");
        BreathDayData day2 = new BreathDayData();
        day2.setDate(date1);
        day2.setData("22");
        day2.setMax("15");
        day2.setMin("12");

        days1.add(day1);
        days1.add(day2);
        current.setDays(days1);
        WeekData pre = new WeekData("24 SET - 30 SET", "96 Media");

        weeks.add(current);
        weeks.add(pre);

        return weeks;
    }






