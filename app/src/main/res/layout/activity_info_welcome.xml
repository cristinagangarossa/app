<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoWelcomeActivity"
    android:padding="10dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/signupToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/SignupToolbar">
        <TextView
            android:id="@+id/signup_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/gray_dark"
            android:textSize="16sp"
            android:text="@string/signup"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/selectedManButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/gen_male"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/selectedWomanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/gen_female"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_male"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="102dp"
            android:layout_marginRight="35dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_female"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="102dp"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutAge"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="35dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edit_text"
            android:hint="@string/age" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutHeight"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edit_text"
            android:drawableRight="@drawable/ic_measure_cm"
            android:hint="@string/height"
            android:paddingRight="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutWeight"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edit_text"
            android:drawableRight="@drawable/ic_measure_kg"
            android:hint="@string/weight"
            android:paddingRight="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:text="@string/next"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="424dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

</LinearLayout>