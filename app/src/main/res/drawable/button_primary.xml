<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <stroke android:width="1dip" android:color="@color/white"/>
            <gradient android:angle="-90" android:startColor="@color/primary_focus" android:endColor="@color/primary_focus"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <stroke android:width="1dip" android:color="@color/white"/>
            <gradient android:angle="-90" android:startColor="@color/primary" android:endColor="@color/primary"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <stroke android:width="1dip" android:color="@color/white"/>
            <gradient android:angle="-90" android:startColor="@color/primary_disabled" android:endColor="@color/primary_disabled"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <stroke android:width="1dip" android:color="@color/white"/>
            <gradient android:angle="-90" android:startColor="@color/primary" android:endColor="@color/primary"/>
        </shape>
    </item>

</selector>