<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <gradient android:angle="-90" android:startColor="@color/gray_dark" android:endColor="@color/gray_dark"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <gradient android:angle="-90" android:startColor="@color/gray_darker" android:endColor="@color/gray_darker"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="300dip"/>
            <gradient android:angle="-90" android:startColor="@color/gray_darker" android:endColor="@color/gray_darker"/>
        </shape>
    </item>
</selector>